{
  "name": "Account",
  "plural": "accounts",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "phone": {
      "type": "string",
      "required": false,
      "default": null
    },
    "type": {
      "type": "string"
    },
    "created": {
      "type": "date"
    },
    "modified": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "events": {
      "type": "hasMany",
      "model": "Event",
      "foreignKey": "accountId",
      "options": {
        "nestRemoting": true
      },
      "through": "Participant"
    },
    "portraits": {
      "type": "hasMany",
      "model": "Portrait",
      "foreignKey": "accountId",
      "options": {
        "nestRemoting": true
      }
    },
    "identities": {
      "type": "hasMany",
      "model": "AccountIdentity",
      "foreignKey": "userId"
    },
    "credentials": {
      "type": "hasMany",
      "model": "AccountCredential",
      "foreignKey": "userId"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "AccountToken",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "user",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "super",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
